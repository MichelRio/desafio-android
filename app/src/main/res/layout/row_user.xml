<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="64dp">

    <ImageView
            android:id="@+id/cover"
            android:layout_width="74dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/ic_launcher_background"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:id="@+id/name"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/cover"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fullname"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:id="@+id/repname" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="244dp"
            android:layout_height="48dp"
            android:id="@+id/repdesc" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/repname" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forks" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/repdesc" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stars" app:layout_constraintStart_toEndOf="@+id/forks" android:layout_marginStart="40dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/repdesc"/>
</android.support.constraint.ConstraintLayout>